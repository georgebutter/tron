{
  "compilerOptions": {
    "outDir": "./client/scripts/",
    "removeComments": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "alwaysShowRuleFailuresAsWarnings": false,
        "ignoreDefinitionFiles": false,
      }
    ],
    "baseUrl": "./",
    "paths": {
      "scenes": ["src/scenes"]
    }
  },
  "include": [
    "**/*.ts"
  ],
}
